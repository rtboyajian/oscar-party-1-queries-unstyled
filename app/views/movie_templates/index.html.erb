<nav aria-label="breadcrumb">
  <ul>
    <li><a href="/">Home</a></li>
    <li>Movies</li>
  </ul>
</nav>

<article>
  <header>
    <h1> List of movies </h1>
  </header>

  <ul>
  <% @list_of_movies.each do |a_movie| %>
    <li>
      <img src="<%= a_movie.image %>" width="100">

      <a href="/movies/<%= a_movie.id %>">
        <%= a_movie.title %> (<%= a_movie.year %>)
      </a>

      <% if a_movie.result == "won" %>
        🏆
      <% end %>

      /movies/<%= a_movie.id %>
      </li>
    <% end %>
  </ul>
</article>
